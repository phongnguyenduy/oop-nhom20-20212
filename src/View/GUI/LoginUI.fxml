<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="450.0" prefWidth="400.0"
            style="-fx-background-color: linear-gradient(to bottom, #ffd8b9 , #f2abb3, #b1cae9);"
            xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.LoginController">
    <children>
        <AnchorPane layoutX="80.0" layoutY="111.0" prefHeight="281.0" prefWidth="240.0"
                    style="-fx-background-color: white; -fx-background-radius: 1em;">
            <children>
                <Text fill="#3066d3" layoutX="60.0" layoutY="47.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="ĐĂNG NHẬP" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Text>
                <TextField fx:id="inpEmail" layoutX="46.0" layoutY="76.0" promptText="Email"/>
                <PasswordField fx:id="inpPassword" layoutX="46.0" layoutY="116.0" promptText="Mật khẩu"/>
                <Button layoutX="75.0" layoutY="155.0" mnemonicParsing="false" onAction="#handleSignIn"
                        prefHeight="25.0" prefWidth="91.0"
                        style="-fx-background-color: #c13346; -fx-background-radius: 1em;" text="ĐĂNG NHẬP"
                        textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Button>
                <Label alignment="CENTER" layoutX="51.0" layoutY="196.0" onMouseClicked="#addAccount" prefHeight="17.0"
                       prefWidth="139.0" text="Đăng kí tài khoản" textAlignment="CENTER" textFill="#2a84bf">
                    <font>
                        <Font name="System Italic" size="12.0"/>
                    </font>
                </Label>
                <Label fx:id="label" layoutX="14.0" layoutY="222.0" prefHeight="37.0" prefWidth="219.0"
                       text="Tên tài khoản, mật khẩu hoặc email không đúng!" textAlignment="CENTER" textFill="RED"
                       wrapText="true">
                    <font>
                        <Font name="System Italic" size="12.0"/>
                    </font>
                </Label>
            </children>
        </AnchorPane>
        <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="32.0" prefHeight="60.0" prefWidth="300.0"
              style="-fx-background-radius: 1em;">
            <children>
                <Text fill="#d74d5a" strokeType="OUTSIDE" strokeWidth="0.0" text="HUST'S HOSPITAL"
                      textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="28.0"/>
                    </font>
                </Text>
                <Text fill="#d74d5a" strokeType="OUTSIDE" strokeWidth="0.0" text="Project nhóm 20"
                      textAlignment="CENTER">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Text>
            </children>
        </VBox>
    </children>
</AnchorPane>
